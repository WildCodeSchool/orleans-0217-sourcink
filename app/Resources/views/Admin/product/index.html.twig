{% extends "base.html.twig" %}

{% block body %}
    <h1>Les solutions</h1>

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Texte</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.title }}</td>
                <td>{{ product.text }}</td>
                <td>{{ product.price }}</td>
                <td>
                    {% if product.picture is not null %}
                    <img src="{{ asset('img/' ~ product.picture.pictureName) }}" />
                {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
