{% extends "base.html.twig" %}

{% block body %}
    <h1>Tableau</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ benefit.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ benefit.description }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('benefit_index') }}"class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">list</i></a>
        </li>
        <li>
            <a href="{{ path('benefit_edit', { 'id': benefit.id }) }}"class="btn-floating btn-small waves-effect waves-light green"><i class="material-icons">mode_edit</i></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button class="btn-floating btn-small waves-effect wave-light red" name="action" type="submit"><i class="material-icons">delete</i></button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
