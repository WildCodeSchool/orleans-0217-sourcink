{% extends "::base.html.twig" %}



{% block header %}
{% endblock %}

{% block body %}
    <h1>Tableau comparateur</h1>

    <table>
        <thead>
        <tr>
            <th>Description</th>
            {% for product in products %}
                <th>
                    {{ product.title }}</th>
            {% endfor %}
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for benefit in benefits %}
        <tr>
            <td>{{ benefit.description }}</td>
            {% if benefit.productOptions is defined %}
                {% for productOption in benefit.productOptions %}
                    <td>{{ productOption.status }}</td>
                {% endfor %}
            {% endif %}
            <td>
                <ul>
                    <li>
                        <a href="{{ path('benefit_edit', { 'id': benefit.id }) }}">edit</a>
                    </li>
                </ul>
            </td>

            {% endfor %}


        </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('benefit_new') }}">Create a new benefit</a>
        </li>
    </ul>
{% endblock %}
