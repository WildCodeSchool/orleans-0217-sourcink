{% extends "base.html.twig" %}

{% block body %}
    <h1>Categories</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>{{ category.text }}</td>
                <td>
                {% if category.picture is not null %}
                    <img src="{{ asset('img/' ~ category.picture.pictureName) }}" />
                         {% endif %}
                    </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
