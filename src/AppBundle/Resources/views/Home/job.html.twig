<h2 class="center" id="job">Nos Offres</h2>
{% for offer in offers %}
{% if offer.statut in ['HomeSite'] %}


<div class="row">
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{ offer.title }}<i class="material-icons right">add</i></span>
                    <p class="grey-text">{{ offer.city | raw }}</p>
                    <p class="grey-text">{{ offer.duration | raw }}
                        {{ offer.debut | date("d/m/y") }}</p>
                </div>
                <div class="card-reveal">

                    <span class="card-title grey-text text-darken-4">{{ offer.title }}<i class="material-icons right">close</i></span>
                    <p class="grey-text">{{ offer.city | raw }} {{ offer.duration | raw }} {{ offer.debut | date("d/m/y") }}</p>
                    <p>{{ offer.description | raw }} </p>
                    <button class="waves-effect waves-light btn red" type="submit"> <a href="{{ path('fos_user_security_login', { 'id': offer.idoffre }) }}">Postuler</a></button>

                </div>

            </div>
        </div>

    {% endif %}
    {% endfor %}

</div>
<div class="col s12">
    <div class="center">
        <a class="waves-effect waves-light btn red" href="{{ path('job_list') }}">Plus d'offres...</a>
    </div>

</div>

<div class="row"></div>