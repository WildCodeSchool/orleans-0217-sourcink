<h2 class="center" id="jobs">Nos Offres d'emploi</h2>

{% for offer in offers %}
<div class="col s12 m4">
    <div class="card card-offres color">
        {% if offer.attachment_id is not empty %}
        <div class="card-content white-text hvr-bounce-to-right"

             style="background-image: url('/img/jobPicture/{{ offer.image }}');
                     border-radius: inherit; background-repeat:no-repeat; background-size:cover;">
            {% else %}
            <div class="card-content white-text hvr-bounce-to-right offerjob">
                {% endif %}
                <div class="layer">
                    <span class="card-title offers-title" id="card-title">{{ offer.title | raw }}</span>
                    <div class="card-content">
                        <p>
                            <i class="fa fa-location-arrow"></i> {{ offer.city | raw }}
                            | {{ offer.duration | upper }}
                        </p>
                    </div>
                    <a class="waves-effect waves-light btn red offres"
                       href="{{ path('job_page', {'id': offer.id}) }}">
                        Voir plus
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
